<h1 class="text-center my-5">
  Admin Mode - Utilisateurs d'Eazia
</h1>

<table class="table">

  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Pr√©nom</th>
      <th scope="col">Nom</th>
      <th scope="col">Email</th>
      <th scope="col">Porte-monnaie</th>
      <th scope="col">Statut</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
        <tr>
              <th scope="row"><%= user.id %></th>

              <td><%= link_to user.first_name, admin_user_path(user), class: "text-primary" %></td>

              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.wallet %></td>
              <td><%= user.status %></td>
        </tr>
    <% end %>
  </tbody>

</table>
