<h1 class="text-center my-5">
  Admin Mode - Utilisateur - <%= @user.first_name %> <%= @user.last_name %>
</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Informations</h3>
        </div>
        <div class="card-body">
          <p><strong>Prénom:</strong> <%= @user.first_name %></p>
          <p><strong>Nom:</strong> <%= @user.last_name %></p>
          <p><strong>Email:</strong> <%= @user.email %></p>
          <p><strong>Porte-monnaie:</strong> <%= @user.wallet %></p>
          <p><strong>Statut:</strong> <%= @user.status %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Actions</h3>
        </div>
        <div class="card-body">
          <%= link_to "Modifier", edit_admin_user_path(@user), class: "btn btn-primary" %>
          <%= link_to "Supprimer", admin_user_path(@user), data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de supprimer l'utilisateur ?"}, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
