    </div>


    <div class="pricecomponents">

      <div class="pricecomponent">
        <%= image_tag 'landing/jeton.svg', alt: "Icône jeton" %>
        <p>30 Jetons disponibles pour créer des posts*</p>
      </div>

      <div class="pricecomponent">
        <%= image_tag 'landing/folder.svg', alt: "Icône dossier" %>
        <p>Entre 3 et 4 posts/mois</p>
      </div>

      <div class="pricecomponent">
        <%= image_tag 'landing/calendar.svg', alt: "Icône calendrier" %>
        <p>Programmation</p>
      </div>

      <div class="pricecomponent">
        <%= image_tag 'landing/Chat.svg', alt: "Icône chat" %>
        <p>SAV 5j/7 par mail (réponse en 48h max)</p>
      </div>

      <div class="pricecomponent">
        <%= image_tag 'landing/globe.svg', alt: "Icône globe" %>
        <p>Accès à l'agence QA sur devis</p>
      </div>

    </div>


 <div class="edit-buttons row">
              <div class="col-md-6 text-center">
                <%= link_to 'Modifier', edit_admin_subscription_path(subscription), class: "btn btn-outline-warning" %>
              </div>

              <div class="col-md-6 text-center">
                <%= link_to 'Supprimer', admin_subscription_path(subscription), data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de supprimer le produit d'abonnement ?"}, class: "btn btn-danger" %>
