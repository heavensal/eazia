<h1 class="text-center my-5">
  Admin Mode - Abonnements
</h1>


  <% @subscriptions.each do |subscription| %>

<div class="cards">

  <div class="cardprice cardprice-2">

    <div class="offre">
      <div class="populaire"><h3><%= subscription.name %></h3> <div class="encadrepopulaire"><p>Populaire</p></div></div>
