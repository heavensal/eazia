<h1 class="text-center my-5">
  Admin Mode - Modifier un Produit
</h1>

<%= form_for @product, url: admin_product_path(@product)  do |f| %>

  <div class="form-group my-3 px-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group my-3 px-3">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group my-3 px-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group my-3 px-3">
    <%= f.label :stripe_price_id, "Nom Stripe (ID du prix sur Stripe)" %>
    <%= f.text_field :stripe_price_id, class: "form-control" %>
  </div>

  <div class="form-group my-3 px-3">
    <%= f.label :amount, "Nombre de jetons donnÃ©es" %>
    <%= f.text_field :amount, class: "form-control" %>
  </div>

  <div class="form-group my-3 px-3 text-center">
    <%= f.submit "Modifier", class: "btn btn-primary" %>
  </div>

<% end %>
