        </div>
      </div>

      <div class="bottomnav">
        <div class="restjeton">
          <div class="div-2-sidebar">
            <div class="text-wrapper-4">
              <%= turbo_frame_tag "wallet" do %>
                <p><%= @wallet %> Jetons restants</p>
              <% end %>
            </div>
          </div>
        </div>

        <div class="user">
          <%= link_to account_path do %>
            <div class="div-2-sidebar">
              <%= image_tag("icon-user.svg", alt:"compte") %>
              <div class="text-wrapper-4">
                Mon compte
              </div>
            </div>
