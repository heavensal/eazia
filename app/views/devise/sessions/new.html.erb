<div class="container">
<div data-controller="autorisation-form">
  <h1>Bienvenue !</h1>
    <h3>Se connecter</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.label :email %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            <p class="d-none text-danger fst-italic", data-autorisation-form-target="text" style="font-size: 12px;">l'email est obligatoire</p>
          </div>

          <div class="field">
            <%= f.label :Mot_de_passe %><br>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field-2 field-checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Se souvenir de moi" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Connexion", class: "btn-connexion" %>
          </div>
        <% end %>
</div>
<%= render "devise/shared/links" %>
</div>
