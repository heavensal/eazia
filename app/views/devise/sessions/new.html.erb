<div class="container" data-controller="obligation-form" data-loader-target="togglableElement">
  <h1>Bienvenue !</h1>
    <h3>Se connecter</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="field">
          <% if resource.errors.any? %>
            <% resource.errors.full_messages.each do |message| %>
            <% if message.include?("Email") %>
              <p style="color: red;"><%= message %></p>
            <% end %>
            <% end %>
          <% end %>

            <%= f.label :email %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            <p class="d-none text-danger fst-italic", data-obligation-form-target="text" style="font-size: 12px;">L'email est obligatoire</p>
          </div>

          <div class="field">
            <%= f.label :Mot_de_passe %><br>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field-2 field-checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Se souvenir de moi" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Connexion", class: "btn-connexion" %>
          </div>
        <% end %>

<%= render "devise/shared/links" %>
</div>
