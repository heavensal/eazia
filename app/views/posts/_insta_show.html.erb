<div class="card carousel-card insta text-center" data-controller="form-submission">
  <div class="topbar">
    <div>
      <%# Image du instagram à publier et username, possible uniquement si il s'est bien connecté %>

      <% if current_user.instagram_account.username %>
        <%= image_tag current_user.instagram_account.photo_url, class:"icon" %>
         <b>
           <%= current_user.instagram_account.username %>
         </b>
       <% end %>
     </div>

    <div>
      <%= render "layouts/instagram/threepoints" %>
    </div>
  </div>

  <div class="insta-show">
    <%= render "photos/insta-photos", photos_selected: photos_selected %>
  </div>

  <%= render "layouts/instagram/interaction_btn" %>

  <%# Description du post dans la vue instagram %>
  <%= render "gpt_creations/insta-description", gpt_creation: gpt_creation, description: description %>

<%= render "show_btns", post: @post %>
</div>
