<h1>Votre prochain post est à 1 clic</h1>

<%= form_for(@post) do |f| %>

  <div class="field">
    <%= f.label :prompt,  "Saisisez en quelques mots le sujet de votre prochain post"%><br>
    <%= f.text_field :prompt, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :prompt,  "Ajoutez vos propres photos ?"%><br>
    <%= f.file_field :photos, as: :file, multiple: true %>
  </div>

  <div class="field">
    <%= f.label :pictures_generated,  "Sélectionner le nombre d'images à créer"%><br>
    <%= f.select :pictures_generated, options_for_select(0..5) %>
  </div>



  <div class="actions">
    <%= f.submit "Générer mon post", class: "btn-valider" %>
  </div>
<% end %>
