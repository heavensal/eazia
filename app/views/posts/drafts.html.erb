<div>
  <h1>Mes brouillons</h1>
  <div class="text-center mx-5">
    <%= link_to "Générer un autre post", new_post_path, class:"button-annexe" %>
    <%= link_to "Voir mon historique", new_post_path, class:"button-annexe" %>
  </div>
<div class="brouillons">
   <% @posts.each do |post| %>
    <div class="insta-show-draft">
    <div class="topbar">
        <%= image_tag "photo_alice.jpeg", class:"icon" %>
        <b><%= current_user.instagram %></b>
    <%= render "layouts/instagram/threepoints" %>
    </div>
    <div class="images-drafts">
      <%= link_to post_path(post) do %>
      <% if post.photos %>
      <% post.photos.each do |img| %>
      <%= cl_image_tag img.key, width: 160 %>
        <% end %>
      <% end %>
      </div>
      </div>
      <p><%= post.created_at %></p>
      <p><%= post.gpt_creation.description if post.gpt_creation %></p>
    <% end %>
  <%= render "layouts/instagram/interaction_btn" %>
  <div class="textcontent" data-controller="toggledescription">
    <b> <%= current_user.instagram %> </b>
  </div>
  <% end %>
</div>
  </div>

</div>
